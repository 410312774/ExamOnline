<view class="page-info">
    <view class="header">
        <view class="avatar"><open-data type="userAvatarUrl"></open-data></view>
        <view class="nickname"><open-data type="userNickName"></open-data></view>
    </view>
    <view class="menus">
        <view class="menu" bindtap="bindgorule" >
            <view class="left">
            <image class="icon" style="background-color: #eeeeee;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20190919/volume.png"></image>
            <text class="title">使用说明</text>
            </view>
            <view class="arraw">></view>
        </view>  
        <view class="menu" bindtap="bindgomode" >
            <view class="left">
            <image class="icon" style="background-color: #eeeeee;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20191210/setting.png"></image>
            <text class="title">模式设置</text>
            </view>
            <view class="arraw">></view>
        </view>            
        <view class="menu" bindtap="bindMyHistory" >
            <view class="left">
            <image class="icon" style="background-color: #eeeeee;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20190918/edit.png"></image>
            <text class="title">答题记录</text>
            </view>
            <view class="arraw">></view>
        </view>  
        <view class="menu" bindtap="bindMyStudy" >
            <view class="left">
            <image class="icon" style="background-color: #eeeeee;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20190918/edit.png"></image>
            <text class="title">错题记录</text>
            </view>
            <view class="arraw">></view>
        </view>                
        <view class="menu" bindtap="bindgoabout" >
            <view class="left">
            <image class="icon" style="background-color: #eeeeee;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20190920/about.png"></image>
            <text class="title">关于我们</text>
            </view>
            <view class="arraw">></view>
        </view>  
    </view>

</view>