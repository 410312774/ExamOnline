.page-simple{
    width: 100%;
}
.page-simple .sortnumber{
    padding: 5px;
    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
    justify-content: flex-end;
}
.page-simple .sortnumber .current{
    width: 20px;
    height: 20px;
    border-radius: 10px;
    color: #fff;
    background-color: #07c160;
}
.page-simple .sortnumber .total{
    width: 20px;
    height: 20px;
    border-radius: 10px;
    color: #fff;
    background-color: #54A5A2;
}
.page-simple .question{
    
}
.page-simple .question .title{
    background-color: #f0f0f0;
    width: 100%;
    padding: 10px 0;
}
.page-simple .question .option{
    padding: 5px;
}
.page-simple .radio-group {
    border-bottom: 1px solid #ddd;
}
.page-simple .radio {
    display: block;
    border-top: 1px solid #ddd;
    padding: 10px;
}
.page-simple .btn-area{
    padding: 10px;
    background-color: #f0f0f0;
}