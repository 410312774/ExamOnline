.page-about{
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
}
.page-about .title{
    height: 50px;
    line-height: 50px;
    vertical-align: middle;
    background-color: #fff;
    padding-left: 10px;
}
.page-about .desc{
    height: 250px;
    background-color: #fff;
    border-top: 1px solid #f0f0f0;
    padding-top: 10px;
    padding-left: 10px;
    width: 97%;
}
.page-about .action-weixin{
    text-align: center;
    margin-top:15px;
    margin-bottom:15px;
    position: fixed;
    top: 72px;
    right: 0px;
}
.page-about .action-weixin button{
    width: 70px;
    height: 70px;
    line-height: 70px;
    vertical-align: middle;
    border-radius: 70px;
    background: #000;
    opacity: 0.5;
    border: 2px solid #01DFA5;
}
.page-about .action-pay{
    text-align: center;
    margin-top:15px;
    margin-bottom:15px;
    position: fixed;
    top: 145px;
    right: 0px;
}
.page-about .action-pay button{
    width: 70px;
    height: 70px;
    line-height: 70px;
    vertical-align: middle;
    border-radius: 70px;
    background: #000;
    opacity: 0.5;
    border: 2px solid #07c160;
}
/* 外层组件的宽度可设置成100%或具体数值 */
.adContainer {
    width: 100%;
    margin-top: 5px;
    position: absolute;
    bottom: 0px;
}