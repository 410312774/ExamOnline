<view class="page-question">
    <view class="questions">
    <block wx:for="{{questions}}" wx:key="id" wx:for-index="idx" wx:for-item="question">
    <view class="question-container">
        <view class="question">
            <view class="sortcode">{{idx+1}}，</view>
            <view class="title">{{question.title}}</view>
        </view>
        <view class="options">
            <radio-group class="radio-group" bindchange="radioChange">
            <label class="radio" wx:for="{{question.options}}">
                <radio value="{{item.code}}"/>{{item.code}}，{{item.value}}
            </label>
            </radio-group>
        </view>
    </view>
    </block>
    </view>

    <view class="btn-area">
        <button type="primary" bindtap="bindButtonTap">确认提交</button>
    </view>                                  
</view>